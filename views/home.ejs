<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>home</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
  <div class="row">
    <% blogs.forEach(blog => { %>
      <div class="col-md-3 mb-4"> 
        <div class="card h-50">
          <img src="/<%= blog.coverImg %>" class="card-img-top" alt="<%= blog.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="btn btn-sm btn-primary">View More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>


    <%- include('./partials/script') %>
</body>
</html>