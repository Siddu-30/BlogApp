<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>home</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <form action="/blog" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="CoverImage">CoverImage</label>
                <input type="file" name="coverImg" id="CoverImage" class="form-control" aria-describedby="CoverImage">
            </div>
            <div class="mb-3">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" class="form-control" aria-describedby="title">
            </div>
            <div class="mb-3">
                <label for="body">Content</label>
                <textarea name="body" id="body" class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
        </form>
    </div>
    <%- include('./partials/script') %>
</body>
</html>